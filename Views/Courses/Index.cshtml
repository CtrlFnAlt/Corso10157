@model List<CourseViewModel>
    <h2>Elenco Corsi</h2>
  <form class="form-inline my-2 my-lg-0" asp-action="Index" asp-controller="Courses" method="get">
      <input class="form-control mr-sm-2" type="text" name="search" placeholder="Ricerca..." aria-label="Cerca">
        <button class="btn btn-outline-success my-2 my-sm-0"><i class="fas fa-search"></i></button>
    </form>

<div class="container">
    <div class="col-sm-12">
        <nav aria-label="Page navigation text-center">
            <ul class="pagination">
                <li class="page-item" aria-current="page">
                    <a class="page-link" asp-route-orderby="NomeCorso" asp-route-ascending="true">Ordina per Nome</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-route-orderby="Prezzo" asp-route-ascending="true">Ordina per Prezzo</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-route-orderby="Rating" asp-route-ascending="false">Ordina per Rating</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

    @foreach (CourseViewModel course in Model)
{
     <div class="row">
         <div class="col-sm-7">
             <h3>@course.NomeCorso</h3>
             <div class="author">di @course.Autore</div>
             <p>@course.Descrizione</p>
             <div class="prezzo">&euro; @course.Prezzo</div>
         </div>
         <div class="col-sm-2">@for(var i = 1; i<= course.Rating; i++){
             <i class="fas fa-star" aria-label="course.Rating"></i>
         }
         </div>
         <div class="col-sm-3">
             <img src="~/Images/@course.Image" alt="Img del corso" heigth="250px" width="250px">
         
             <a asp-controller="Courses" asp-action="Detail" asp-route-id="@course.Id" class="btn btn-warning">Dettaglio</a>
            
         </div>
     </div>
         <hr>
}
<div class="container">
    <div class="col-sm-12">
        <nav aria-label="Page navigation text-center">
            <ul class="pagination">
                <li class="page-item" aria-current="page">
                    <a class="page-link" asp-route-page=1 >1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-route-page=3>2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-route-page=3>3</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
